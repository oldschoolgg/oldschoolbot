{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["@bso/**", "@/lib/bso/**"],
							":BLANK_LINE:",
							[":URL:", ":BUN:", ":NODE:", ":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"],
							":BLANK_LINE:",
							[":ALIAS:", ":PATH:"]
						]
					}
				}
			}
		}
	},
	"files": {
		"maxSize": 10000000,
		"includes": [
			"**/*.ts",
			"**/*.mts",
			"**/*.json",
			"**/*.test.ts",
			"**/*.mdx",
			"**/*.md",
			"**/*.mjs",
			"**/*.cjs",
			"**/*.d.ts",
			"**/*.tsx",
			"!**/node_modules",
			"!**/dist",
			"!**/coverage",
			"!**/profiling",
			"!**/logs",
			"!**/icon_cache",
			"!**/.astro",
			"!**/.yarn",
			"!**/.pnpm-store"
		]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "master"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useAltText": "off",
				"useKeyWithClickEvents": "off",
				"useButtonType": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noAssignInExpressions": "warn",
				"noAsyncPromiseExecutor": "off",
				"noConfusingVoidType": "off",
				"noFocusedTests": "off",
				"noArrayIndexKey": "warn"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"useExponentiationOperator": "off",
				"noUselessElse": "off",
				"useLiteralEnumMembers": "warn",
				"noInferrableTypes": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"noConstructorReturn": "off",
				"useParseIntRadix": "off"
			},
			"complexity": {
				"noExtraBooleanCast": "warn",
				"noBannedTypes": "warn",
				"noForEach": "warn",
				"noStaticOnlyClass": "off",
				"noUselessContinue": "warn"
			},
			"performance": {
				"noAccumulatingSpread": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "none",
			"arrowParentheses": "asNeeded"
		}
	}
}
