{
	"name": "oldschoolbot",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"============DEVELOPMENT": "============",
		"watch": "nodemon --delay 1ms -e ts -w src --exec \"pnpm exec-and-start\"",
		"exec-and-start": "concurrently \"pnpm exec-sql\" \"pnpm build-and-run\"",
		"build-and-run": "tsx esbuild.mts && node --trace-warnings --enable-source-maps dist",
		"dev": "pnpm --filter cli build && node --env-file=.env packages/cli/dist/cli.js",
		"watch:tsc": "tsc -w -p src",
		"start": "pnpm watch",
		"lint": "tsx --tsconfig scripts/tsconfig.json scripts/lint.ts",
		"clean": "npx tsx scripts/clean.ts",
		"============SCRIPTS": "============",
		"spritesheet": "tsx --tsconfig scripts/tsconfig.json ./scripts/spritesheet.ts && pnpm lint",
		"generate:robochimp": "prisma generate --no-hints --schema prisma/robochimp.prisma",
		"bso-data": "git fetch origin bso:bso && git checkout bso -- ./data/bso/ && git diff --name-only master bso | sort > data/misc/bso-diff.txt",
		"exec-sql": "tsx --tsconfig=scripts/tsconfig.json --env-file=.env scripts/execute-sql.ts",
		"============BUILDING": "============",
		"build": "pnpm build:packages && pnpm gen && concurrently --raw \"tsx esbuild.mts\" \"pnpm test:types\"",
		"gen": "concurrently --raw \"prisma generate --no-hints\" \"pnpm generate:robochimp\" && echo \"Generated Prisma Client\"",
		"============TESTING": "============",
		"test": "pnpm concurrent \"pnpm test:lint\" \"pnpm test:types\" && pnpm test:unit",
		"test:types": "concurrently \"tsc --noEmit -p tests/unit\" \"tsc --noEmit -p tests/integration\" \"tsc --noEmit -p src\" \"tsc --noEmit -p scripts\"",
		"test:lint": "biome check --diagnostic-level=error",
		"test:unit": "vitest run --config vitest.unit.config.mts",
		"test:docker": "docker compose build && docker compose run --rm app",
		"test:integration": "pnpm tsx --no-deprecation --env-file=.env.test ./scripts/integration-tests.ts",
		"test:watch": "vitest --config vitest.unit.config.mts --coverage",
		"test:ci:unit": "pnpm concurrent \"pnpm test:unit\" \"pnpm test:lint\" \"tsc -p tests/integration\" \"tsc -p tests/unit\"",
		"============MISC": "============",
		"concurrent": "concurrently --raw --kill-others-on-fail",
		"build:packages": "pnpm -r --filter \"!.\" --filter \"!./docs\" --filter \"!test-dashboard\" --filter \"!oldschoolgg\" --filter \"!robochimp\" build",
		"============monorepo": "============",
		"monorepo:build": "pnpm concurrent \"pnpm -r --filter \"!.\" --filter \"!./docs\" --filter \"!test-dashboard\" --filter \"!oldschoolgg\" build\" \"pnpm gen\" && tsx esbuild.mts",
		"monorepo:test": "pnpm --stream --workspace-concurrency=2 -r test && pnpm test"
	},
	"dependencies": {
		"@discordjs/rest": "^2.6.0",
		"@discordjs/ws": "^2.0.4",
		"@electric-sql/pglite": "^0.3.10",
		"@oldschoolgg/collectionlog": "workspace:*",
		"@oldschoolgg/discord": "workspace:*",
		"@oldschoolgg/rng": "workspace:*",
		"@oldschoolgg/schemas": "workspace:*",
		"@oldschoolgg/toolkit": "workspace:*",
		"@oldschoolgg/gear": "workspace:*",
		"@oldschoolgg/util": "workspace:*",
		"@prisma/adapter-pg": "^6.19.0",
		"@prisma/client": "^6.19.0",
		"@sapphire/snowflake": "^3.5.3",
		"@sapphire/time-utilities": "^1.6.0",
		"@sapphire/timer-manager": "^1.0.2",
		"async-mutex": "^0.5.0",
		"bufferutil": "^4.0.9",
		"dotenv": "^16.5.0",
		"exit-hook": "^4.0.0",
		"ioredis": "^5.8.2",
		"lru-cache": "^10.3.0",
		"luxon": "^3.7.2",
		"oldschooljs": "workspace:*",
		"p-queue": "8.1.1",
		"pg": "^8.16.3",
		"pglite-prisma-adapter": "^0.6.1",
		"piscina": "^5.1.3",
		"remeda": "^2.33.4",
		"rimraf": "6.1.2",
		"simple-statistics": "^7.8.3",
		"skia-canvas": "^3.0.8",
		"sonic-boom": "^4.2.0",
		"spritesheets": "^0.0.1",
		"ts-pattern": "^5.7.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.5.2",
		"@types/pg": "^8.15.5",
		"@vitest/coverage-v8": "^4.0.8",
		"@vladfrangu/async_event_emitter": "^2.4.7",
		"concurrently": "^9.2.1",
		"esbuild": "0.27.2",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"prisma": "^6.19.0",
		"sharp": "0.34.5",
		"tsdown": "0.20.1",
		"tsx": "4.21.0",
		"typescript": "^5.9.3",
		"vitest": "4.0.15"
	},
	"pnpm": {
		"neverBuiltDependencies": []
	},
	"packageManager": "pnpm@10.23.0"
}
