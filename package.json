{
	"name": "oldschoolbot",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"============DEVELOPMENT": "============",
		"watch": "nodemon --delay 1ms -e ts -w src --exec \"pnpm build:esbuild && node --enable-source-maps dist\"",
		"dev:stage1": "pnpm concurrent \"pnpm install\" \"prisma db push\" \"pnpm generate:robochimp\" \"pnpm monorepo:build\"",
		"dev:stage2": "pnpm concurrent \"pnpm commands\" \"pnpm creatables\" \"pnpm build\" \"tsx ./scripts/bsoData.ts\"",
		"dev:stage3": "pnpm lint && pnpm test",
		"dev": "pnpm dev:stage1 && pnpm dev:stage2 && pnpm dev:stage3",
		"watch:tsc": "tsc -w -p src",
		"start": "pnpm watch",
		"lint": "tsx scripts/lint.ts",
		"============SCRIPTS": "============",
		"spritesheet": "tsx ./scripts/spritesheet.ts && pnpm lint",
		"data": "concurrently \"tsx ./scripts/monster_table.ts\" && pnpm lint",
		"wiki": "tsx ./scripts/wiki.ts",
		"commands": "tsx ./scripts/renderCommandsFile.ts",
		"creatables": "tsx ./scripts/renderCreatablesFile.ts",
		"generate:robochimp": "prisma generate --no-hints --schema prisma/robochimp.prisma",
		"============BUILDING": "============",
		"build": "pnpm --stream -r build:esbuild && pnpm build:esbuild",
		"gen": "concurrently --raw \"prisma generate --no-hints\" \"pnpm generate:robochimp\" && echo \"Generated Prisma Client\"",
		"build:esbuild": "concurrently --raw \"pnpm build:main\" \"pnpm build:workers\"",
		"build:main": "esbuild src/index.ts src/lib/workers/index.ts --sourcemap=inline --minify --legal-comments=none --outdir=./dist --log-level=error --bundle --platform=node --loader:.node=file --external:skia-canvas --external:@prisma/robochimp --external:@prisma/client --external:bufferutil --external:oldschooljs --external:discord.js --external:node-fetch --external:piscina",
		"build:workers": "esbuild src/lib/workers/kill.worker.ts src/lib/workers/finish.worker.ts src/lib/workers/casket.worker.ts --sourcemap=inline --log-level=error --bundle --minify --legal-comments=none --outdir=./dist/lib/workers --platform=node --loader:.node=file --external:skia-canvas --external:@prisma/robochimp --external:@prisma/client --external:bufferutil --external:oldschooljs --external:discord.js --external:node-fetch --external:piscina",
		"============TESTING": "============",
		"test": "pnpm concurrent \"pnpm test:lint\" \"pnpm test:unit\" \"pnpm test:types\"",
		"test:types": "concurrently \"tsc --noEmit -p tests/unit\" \"tsc --noEmit -p tests/integration\" \"tsc --noEmit -p src\"",
		"test:lint": "biome check --diagnostic-level=error",
		"test:unit": "vitest run --config vitest.unit.config.mts",
		"test:docker": "docker compose up --no-attach db --build --abort-on-container-exit && docker compose down -v",
		"test:watch": "vitest --config vitest.unit.config.mts --coverage",
		"test:ci:unit": "pnpm concurrent \"pnpm test:unit\" \"pnpm test:lint\" \"tsc -p tests/integration\" \"tsc -p tests/unit\"",
		"============MISC": "============",
		"concurrent": "concurrently --raw --kill-others-on-fail",
		"build:packages": "concurrently --raw \"pnpm -r build:esbuild\" \"pnpm -r build:types\"",
		"============monorepo": "============",
		"monorepo:build": "pnpm concurrent \"pnpm build:packages\" \"pnpm gen\" && pnpm build:esbuild",
		"monorepo:test": "pnpm concurrent \"pnpm --stream -r test\" \"pnpm test\""
	},
	"dependencies": {
		"@oldschoolgg/toolkit": "workspace:*",
		"@prisma/client": "^5.22.0",
		"@sapphire/ratelimits": "^2.4.9",
		"@sapphire/snowflake": "^3.5.3",
		"@sapphire/time-utilities": "^1.6.0",
		"@sapphire/timer-manager": "^1.0.2",
		"@sentry/node": "^8.49.0",
		"bufferutil": "^4.0.9",
		"discord.js": "^14.16.3",
		"dotenv": "^16.4.5",
		"e": "0.2.33",
		"exit-hook": "^4.0.0",
		"fast-deep-equal": "^3.1.3",
		"lru-cache": "^10.3.0",
		"murmurhash": "^2.0.1",
		"node-cron": "^3.0.3",
		"node-fetch": "^2.6.7",
		"oldschooljs": "workspace:*",
		"p-queue": "^6.6.2",
		"piscina": "^4.9.2",
		"postgres": "^3.4.5",
		"random-js": "^2.1.0",
		"remeda": "^2.21.3",
		"simple-statistics": "^7.8.3",
		"skia-canvas": "^1.0.2",
		"sonic-boom": "^4.2.0",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^20.14.9",
		"@types/node-cron": "^3.0.7",
		"@types/node-fetch": "^2.6.1",
		"@vitest/coverage-v8": "^2.1.2",
		"concurrently": "^9.1.2",
		"esbuild": "0.25.3",
		"nodemon": "^3.1.7",
		"prettier": "^3.5.3",
		"prisma": "^5.22.0",
		"spritesmith": "^3.5.1",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"vitest": "^2.1.9"
	},
	"resolutions": {
		"esbuild": "0.25.3"
	},
	"packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387"
}
