---
import commandsDoc from '../../../content/generated/commands.json';

export function getStaticPaths() {
	const slugs = new Set<string>(['all']);
	for (const command of commandsDoc.commands) {
		const slug = command.name
			.toLowerCase()
			.replace(/[^a-z0-9-_]/gu, '-')
			.replace(/-{2,}/gu, '-')
			.replace(/(^-|-$)/gu, '');
		slugs.add(slug);
	}
	return Array.from(slugs).map(slug => ({ params: { slug } }));
}
