---
import Layout from '../layouts/Layout.astro';

const commands = [
	{
		command: '!poll [question]',
		description: 'Create a yes/no poll for your viewers to vote on.'
	},
	{
		command: '!endpoll',
		description: 'End the current poll.'
	},
	{
		command: '!feature [streamer]',
		description: 'Features another kick streamer on your stream (no audio).'
	},
	{
		command: '!unfeature',
		description: 'Removes the featured streamer.'
	},
	{
		command: '!overlayon',
		description: 'Turns on the overlay.'
	},
	{
		command: '!overlayoff',
		description: 'Turns off the Worp overlay, completely hiding it until you turn it back on.'
	},
	{
		command: '!irl',
		description: 'Sets your stream to the IRL Category'
	},
	{
		command: '!gambling',
		description: 'Sets your stream to the Slots & Casino category.'
	},
	{
		command: '!sleep',
		description: 'Sets your stream to the Just Sleeping category.'
	},
	{
		command: '!title [title]',
		description: 'Changes the stream title.'
	},
	{
		command: '!location [name]',
		description: 'Changes the streamers location.'
	}
];
---

<Layout pageTitle="Commands">
	<div class="flex flex-col items-center w-full justify-center">
		<div class="gap-y-5 flex flex-col px-5 max-w-lg">
			{
				commands.map((cmd) => (
					<div class="my-4">
						<p>{cmd.command}</p>
						<p class="mt-1 text-muted-foreground">
							{cmd.description}
						</p>
					</div>
				))
			}
		</div>
	</div>
</Layout>
